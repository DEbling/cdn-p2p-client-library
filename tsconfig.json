{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
